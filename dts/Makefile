FIRMWARE_FILE := "BB-IOREC-Pins-00A0.dtbo"
FIRMWARE_DEST := "/lib/firmware/$(FIRMWARE_FILE)"

all: $(FIRMWARE_FILE)

$(FIRMWARE_FILE): BB-IOREC-Pins-00A0.dts
	dtc -O dtb -o $@ -b 0 -@ $<

$(FIRMWARE_DEST): $(FIRMWARE_FILE)
	install "$(FIRMWARE_FILE)" "$(FIRMWARE_DEST)"

install: $(FIRMWARE_DEST)

.PHONY: install
